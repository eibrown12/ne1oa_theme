{#
/**
 * @file
 * Default theme implementation for an 'input' #type form element.
 *
 * Available variables:
 * - attributes: A list of HTML attributes for the input element.
 * - children: Optional additional rendered elements.
 *
 * @see template_preprocess_input()
 *
 * @ingroup themeable
 */
#}

{% if attributes.type == 'text' or attributes.type == 'email' or attributes.type == 'password' or attributes.type == 'search' %}
	{%
	  set classes = [
	    'form-control',
	  ]
	%}
{% elseif attributes.type == 'submit' %}
	{% if attributes.value == 'Submit' or attributes.value == 'Save' %}
		{%
		  set classes = [
			'btn btn-success',
		  ]
		%}
	{% else %}
		{%
		  set classes = [
			'btn btn-primary',
		  ]
		%}
	{% endif %}
{% else %}

{% endif %}
<input{{ attributes.addClass(classes) }} />{{ children }}
